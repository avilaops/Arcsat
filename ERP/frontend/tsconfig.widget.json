    "compilerOptions": {
        "outDir": "./dist/embed/types",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/embed",
        "emitDeclarationOnly": true,
        "jsx": "react-jsx",
        "types": [
            "vite/client"
        ],
        "composite": false
